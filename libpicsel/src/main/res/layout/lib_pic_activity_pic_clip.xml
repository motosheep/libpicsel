<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aaaaaa">

    <com.north.light.libpicselect.crop.ClipImageLayout
        android:id="@+id/lib_pic_activity_clip_image_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/lib_pic_activity_clip_photo_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/lib_pic_activity_pic_clip_cancel"
            android:textColor="@color/color_FFFFFF"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/lib_pic_activity_clip_left_ninety"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:src="@drawable/lib_pic_ic_left_ninety"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/lib_pic_activity_clip_right_ninety"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:src="@drawable/lib_pic_ic_right_ninety"
            android:visibility="gone" />

        <Button
            android:id="@+id/lib_pic_activity_clip_photo_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/lib_pic_activity_pic_clip_confirm"
            android:textColor="@color/color_FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>


</RelativeLayout>